                   <div class="col-xl-5 col-lg-5 col-md-7 col-sm-12">
                       <div class="single-footer-caption">
                           <div class="single-footer-caption">
                               <!-- logo -->
                               <div class="footer-logo">
                                   <a asp-controller= "home" asp-action="index"> <img src="~/img/logo/logo2_footer.png" alt=""></a>
                               </div>
                               <div class="footer-tittle">
