</head>
<body>
   <!-- Header Start -->
     <div class="header-area">
          <div class="main-header ">
              <div class="header-top black-bg d-none d-md-block">
                 <div class="container">
                     <div class="col-xl-12">
                          <div class="row d-flex justify-content-between align-items-center">
                              <div class="header-info-left">
                                  <ul>     @*
                                      <li><img src="~/img/icon/header_icon1.png" alt="">34ºc, Sunny </li>

*@
                                    @{
                                        string weekday = DateTime.Now.DayOfWeek.ToString();
                                        string day = DateTime.Now.Day.ToString();
                                        string month = DateTime.Now.Month switch
                                        {
                                            1 => "January",
                                            2 => "February",
                                            3 => "March",
                                            4 => "April",
                                            5 => "May",
                                            6 => "June",
                                            7 => "July",
                                            8 => "August",
                                            9 => "September",
                                            10 => "October",
                                            11 => "November",
                                            12 => "December",
                                            _ => "Wrong month number"
                                        };
                                        string year = DateTime.Now.Year.ToString();
                                    }


                                      <li><img src="~/img/icon/header_icon1.png" alt="">@weekday, @month @day, @year</li>
                                  </ul>
                              </div>
                              <div class="header-info-right">
                                  <ul class="header-social">    
                                      <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                      <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                     <li> <a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                                  </ul>
                              </div>
                          </div>
                     </div>
                 </div>
              </div>
              <div class="header-mid d-none d-md-block">
                 <div class="container">
                      <div class="row d-flex align-items-center">
                          <!-- Logo -->
                          <div class="col-xl-3 col-lg-3 col-md-3">
                              <div class="logo">
                                  <a asp-controller= "home" asp-action="index"> <img src="~/img/logo/logo.png" alt=""></a>
                              </div>
                          </div>
                          <div class="col-xl-9 col-lg-9 col-md-9">
                              <div class="header-banner f-right ">
                                  <img src="~/img/hero/header_card.jpg" alt="">
                              </div>
                          </div>
                      </div>
                 </div>
              </div>
             <div class="header-bottom header-sticky">
                  <div class="container">
                      <div class="row align-items-center">
                          <div class="col-xl-10 col-lg-10 col-md-12 header-flex">
                              <!-- sticky -->
                                  <div class="sticky-logo">
                                      <a asp-controller= "home" asp-action="index"> <img src="~/img/logo/logo.png" alt=""></a>
                                  </div>
                              <!-- Main-menu -->
                              <div class="main-menu d-none d-md-block">
                                  <nav>                  
                                      <ul id="navigation">    
                                          <li><a class="nav-link" asp-controller= "home" asp-action="index">Home</a></li>
                                          <li><a class="nav-link" asp-controller= "home" asp-action="categori">Category</a></li>
                                          <li><a class="nav-link" asp-controller= "home" asp-action="about">About</a></li>
                                          <li><a class="nav-link" asp-controller= "home" asp-action="blog">Blog</a></li>
                                            <li>
                                                <ul class="submenu">
                                                    <li><a class="nav-link" asp-controller= "home" asp-action="contact">Contact</a></li>
                                                    <li><a class="nav-link" asp-controller= "home" asp-action="details">Details</a></li>
                                                    <li><a class="nav-link" asp-controller= "home" asp-action="elements">Elements</a></li>
                                                    <li><a class="nav-link" asp-controller= "home" asp-action="main">Main</a></li>
                                                    <li><a class="nav-link" asp-controller= "home" asp-action="single_blog">Single Blog</a></li>                                      
                                                </ul>
                                            </li>
                                      </ul>
                                  </nav>
                              </div>
                          </div>             
                          <div class="col-xl-2 col-lg-2 col-md-4">
                              <div class="header-right-btn f-right d-none d-lg-block">
                                  <i class="fas fa-search special-tag"></i>
                                  <div class="search-box">
                                      <form action="#">
                                          <input type="text" placeholder="Search">
                                          
                                      </form>
                                  </div>
                              </div>
                          </div>
                          <!-- Mobile Menu -->
                          <div class="col-12">
                              <div class="mobile_menu d-block d-md-none"></div>
                          </div>
                      </div>
                  </div>
             </div>
          </div>
     </div>
      <!-- Header End -->

    <div>
        <main>
            @RenderBody()
        </main>
    </div>

   <footer>
