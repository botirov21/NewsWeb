@using NewsWeb.ViewModels
@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<!-- Trending Area Start -->
<div class="trending-area fix">
    <div class="container">
        <div class="trending-main mt-4">
            <!-- Trending Tittle -->
            <div class="row d-flex justify-content-between">
                <div class="col-lg-3 col-md-3">
                    <div class="section-tittle mb-30">
                        <h3>Whats New</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    <div class="trending-top mb-30">
                        <div class="trend-top-img">
                            <img src="~/img/@Model.Top1.Images" alt="">
                            <div class="trend-top-cap">
                                <span>@Model.Categories.FirstOrDefault(c => c.Id == Model.Top1.CategoryId).Name</span>
                                <h2><a asp-controller="home" asp-action="details" asp-route-id="@Model.Top1.Id">@Model.Top1.Title</a></h2>
                            </div>
                        </div>
                    </div>
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                            @foreach (var item in Model.Top4)
                            {
                               <div class="col-lg-4">
                                    <div class="single-bottom mb-35">
                                    <div class="trend-bottom-img mb-30">
                                        <img src="~/img/@item.Images" alt="">
                                    </div>
                                    <div class="trend-bottom-cap">
                                        <span class="color1">@Model.Categories.FirstOrDefault(c => c.Id == item.CategoryId).Name</span>
                                        <h4><a href="~/details.html">@item.Title</a></h4>
                                    </div>
                                    </div> 
                                </div>
                            }
                            </div>
                        </div>
                </div>
                <!-- Riht content -->
                <div class="col-lg-4">
                    @if (Model.Top9 is not null)
                        {
                            @foreach (var item in Model.Top9)
                            {
                                <div class="trand-right-single d-flex">
                                    <div class="trand-right-img">
                                        <img src="~/img/@item.Images" alt="">
                                    </div>
                                    <div class="trand-right-cap">
                                        <span class="color1">@Model.Categories.FirstOrDefault(c => c.Id == item.CategoryId).Name</span>
                                        <h4><a href="~/details.html">@item.Title</a></h4>
                                    </div>
                                </div>
                            }
                        }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Trending Area End -->
   
<!--   Weekly2-News start -->
<div class="weekly2-news-area  weekly2-pading gray-bg">
    <div class="container">
        <div class="weekly2-wrapper">
            <!-- section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-30">
                        <h3>Weekly Top News</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="weekly2-news-active dot-style d-flex dot-style">
                        @foreach (var item in Model.Weekly5)
                        {
                            <div class="weekly2-single">
                                <div class="weekly2-img">
                                    <img style="width: 200px; height: 150px;" src="~/img/@item.Images" alt="">
                                </div>
                                <div class="weekly2-caption">
                                    <span class="color1">@Model.Categories.FirstOrDefault(c => c.Id == item.CategoryId).Name</span>
                                    <p>
                                        @{
                                        string day = item.CreatedTime.Day.ToString();
                                        string month = item.CreatedTime.Month switch
                                        {
                                            1 => "January",
                                            2 => "February",
                                            3 => "March",
                                            4 => "April",
                                            5 => "May",
                                            6 => "June",
                                            7 => "July",
                                            8 => "August",
                                            9 => "September",
                                            10 => "October",
                                            11 => "November",
                                            12 => "December",
                                            _ => "Wrong month number"
                                        };
                                        string year = item.CreatedTime.Year.ToString();
                                    }
                                    @month @day, @year
                                    </p>
                                    <h4><a href="~/#">@item.Title</a></h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>           
<!-- End Weekly-News -->
    
<!-- Section Tittle -->
<div class="section-tittle mb-20">
    <h3 class="text-center mt-4">Follow Us</h3>
</div>
