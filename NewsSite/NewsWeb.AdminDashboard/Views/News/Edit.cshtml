@{
    ViewData["Title"] = "Edit Category Page";
    Layout = "_Layout";
}
@model NewsEditViewModel

            <div class="box-header position-relative table-header mt-5">
                <div class="d-flex justify-content-between mt-3 com-header">
                    <h3>Kategoriyani tahrirlash</h3>
                </div>
            </div>
            <form class="mx-4" asp-controller="news" asp-action="edit" method="post" >
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <div class="form-group" style="font-size: 18px;">
                    <label asp-for="Title">Name</label>
                    <input asp-for="Title" value="@Model.Title" autocomplete="off" type="text" class="form-control" id="title" placeholder="category Name">
                </div>
                   <div class="form-group" style="font-size: 18px;">
                    <label asp-for="Body">Body</label>
                    <input asp-for="Body" value="@Model.Body" autocomplete="off" type="text" class="form-control" id="title" placeholder="category Name">
                </div>
                      
                 <input asp-for="Images" value="@Model.Images" autocomplete="off" type="hidden" class="form-control" id="title" placeholder="category Name">
                 <input asp-for="Links" value="@Model.Links" autocomplete="off" type="text" class="form-control" id="title" />
                  <input asp-for="CategoryId" value="@Model.CategoryId" autocomplete="off" type="hidden" class="form-control" id="title" />
             
             
                <div class="form-group" style="font-size: 18px;">
                   <label asp-for="NewImage">New image for Product</label>
                   <div class="input-group mx-4">
                  <input type="file" asp-for="NewImage" accept="image/*" class="form-control" id="inputGroupFile02">
                </div>
                </div>+
                
                  
                   <div class="form-group" style="font-size: 18px;">
                    <label asp-for="Body">Body</label>
                    <input asp-for="Body" value="@Model.Body" autocomplete="off" type="text" class="form-control" id="title" placeholder="category Name">
                </div>


                @*Save, Cancel Buttons*@
                <div class="button-group text-center">
                    <button type="submit" class="btn btn-success me-5" style=" width:200px; " >
                        Saqlash
                    </button>
                    <a asp-controller="category" asp-action="index">
                        <span class="btn btn-info"  style=" width:200px;">Cancel</span>
                    </a>
                </div>
            </form>